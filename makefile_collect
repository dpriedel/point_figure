# see link below for make file dependency magic
#
# http://bruno.defraine.net/techtips/makefile-auto-dependencies-with-gcc/
#
MAKE=gmake

BOOSTDIR := /extra/boost/boost-1.77_gcc-11
GCCDIR := /extra/gcc/gcc-11
GTESTDIR := /usr/local/include
DECIMALSRCDIR := /extra/gcc/decNumber_old
UTILITYDIR := $(HOME)/projects/common_utilities
CPP := $(GCCDIR)/bin/g++
GCC := $(GCCDIR)/bin/gcc

# If no configuration is specified, "Debug" will be used
ifndef "CFG"
	CFG := Debug
endif

#	common definitions

OUTFILE := PF_CollectData

CFG_INC := -I$(HOME)/projects/point_figure/src \
	-I$(GTESTDIR) \
	-I$(BOOSTDIR) \
	-I$(DECIMALSRCDIR) \
	-I$(UTILITYDIR)/include \
	-I/usr/local/include/ChartDirector

RPATH_LIB := -Wl,-rpath,$(GCCDIR)/lib64 -Wl,-rpath,$(BOOSTDIR)/lib -Wl,-rpath,/usr/local/lib

SDIR1 := .
SRCS1 := $(SDIR1)/Main.cpp

SDIR2 := ./src
SRCS2 := $(SDIR2)/PF_CollectDataApp.cpp \
		$(SDIR2)/DDecQuad.cpp \
		$(SDIR2)/PF_Chart.cpp \
		$(SDIR2)/PF_Column.cpp

SDIR3 := $(DECIMALSRCDIR)
SRCS3 := $(SDIR3)/decQuad.c \
		 $(SDIR3)/decNumber.c \
		 $(SDIR3)/decContext.c

SDIR4 := $(UTILITYDIR)/src
SRCS4 := $(SDIR4)/utilities.cpp

SRCS := $(SRCS1) $(SRCS2) $(SRCS3) $(SRCS4)

VPATH := $(SDIR1):$(SDIR2):$(SDIR3):$(SDIR4)

#
# Configuration: Debug
#
ifeq "$(CFG)" "Debug"

OUTDIR=Debug_collect

CFG_LIB := -lpthread \
		-L$(GCCDIR)/lib64 \
		-L$(BOOSTDIR)/lib \
		-lboost_program_options-mt-x64 \
		-L/usr/local/lib \
		-lfmt \
		-lspdlog \
		-ljsoncpp \
		-ldate-tz \
		-lchartdir

OBJS1=$(addprefix $(OUTDIR)/, $(addsuffix .o, $(basename $(notdir $(SRCS1)))))
OBJS2=$(addprefix $(OUTDIR)/, $(addsuffix .o, $(basename $(notdir $(SRCS2)))))
OBJS3=$(addprefix $(OUTDIR)/, $(addsuffix .o, $(basename $(notdir $(SRCS3)))))
OBJS4=$(addprefix $(OUTDIR)/, $(addsuffix .o, $(basename $(notdir $(SRCS4)))))

OBJS=$(OBJS1) $(OBJS2) $(OBJS3) $(OBJS4)

DEPS=$(OBJS:.o=.d)

COMPILE=$(CPP) -c  -x c++  -O0  -g3 -std=c++20 -D_DEBUG -DBOOST_ENABLE_ASSERT_HANDLER -DSPDLOG_FMT_EXTERNAL -DBOOST_REGEX_STANDALONE -fPIC -o $@ $(CFG_INC) $< -march=native -MMD -MP
CCOMPILE=$(GCC) -c  -O0  -g3 -D_DEBUG -fPIC -o $@ $(CFG_INC) $< -march=native -MMD -MP
LINK := $(CPP)  -g -o $(OUTFILE) $(OBJS) $(CFG_LIB) -Wl,-E $(RPATH_LIB)

endif #	DEBUG configuration

# Build rules
all: $(OUTFILE)

$(OUTDIR)/%.o : %.cpp 
	$(COMPILE)

$(OUTDIR)/%.o : %.c
	$(CCOMPILE)

$(OUTFILE): $(OUTDIR) $(OBJS1) $(OBJS2) $(OBJS3) $(OBJS4)
	$(LINK)

-include $(DEPS)

$(OUTDIR):
	mkdir -p "$(OUTDIR)"

# Rebuild this project
rebuild: cleanall all

# Clean this project
clean:
	rm -f $(OUTFILE)
	rm -f $(OBJS)
	rm -f $(OUTDIR)/*.d
	rm -f $(OUTDIR)/*.o

# Clean this project and all dependencies
cleanall: clean
